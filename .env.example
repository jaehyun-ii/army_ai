# ===============================================
# Army AI Platform - Environment Configuration
# ===============================================
# Copy this file to .env and update with your values
# Usage: cp .env.example .env

# =====================
# Port Configuration
# =====================
POSTGRES_PORT=54320
BACKEND_PORT=54321
FRONTEND_PORT=54322

# =====================
# PostgreSQL Database
# =====================
POSTGRES_USER=admin
POSTGRES_PASSWORD=change-this-password-in-production
POSTGRES_DB=armydb

# =====================
# Backend (FastAPI)
# =====================
# Security
SECRET_KEY=change-this-secret-key-in-production-use-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
APP_NAME=Army AI Platform API [GPU]
DEBUG=False
API_PREFIX=/api/v1
LOG_LEVEL=INFO
ENVIRONMENT=production

# CORS용 포트 설정 (백엔드 config.py에서 사용)
FRONTEND_PORT=54322
BACKEND_PORT=54321

# Storage
STORAGE_TYPE=local

# GPU Configuration
CUDA_VISIBLE_DEVICES=0

# =====================
# Frontend (Next.js)
# =====================
NODE_ENV=production
NEXTAUTH_SECRET=change-this-nextauth-secret-use-random-string
JWT_SECRET=change-this-jwt-secret-use-random-string

# Public URLs (브라우저에서 접속하는 URL - update these for production)
NEXTAUTH_URL=http://localhost:54322
NEXT_PUBLIC_API_URL=http://localhost:54321

# Internal URLs (컨테이너 간 통신용 - 서버사이드에서만 사용)
INTERNAL_BACKEND_URL=http://backend:8000
INTERNAL_POSTGRES_URL=postgres:5432

# =====================
# Production Notes
# =====================
# 1. Change all 'change-this-*' values to secure random strings
# 2. Use strong passwords for database and admin accounts
# 3. Set DEBUG=False in production
# 4. Set NODE_ENV=production for frontend
# 5. Configure proper NEXTAUTH_URL for your domain
# 6. Update NEXT_PUBLIC_API_URL for production domain
#
# To generate secure random strings:
# openssl rand -base64 32
